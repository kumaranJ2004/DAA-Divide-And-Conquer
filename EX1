#include<stdio.h>
int zero(int arr[],int low,int high){
    if(low<=high){
        int mid=(low+high)/2;
        if((arr[mid]==0)&&(mid==0||arr[mid-1]==1))
           return mid;
        else if(arr[mid]==1)
            return zero(arr,mid+1,high);
        else
            return zero(arr,low,mid-1);
        }   
        return -1;
}
int main(){
    int m;
    scanf("%d",&m);
    int arr[m];
    for(int i=0;i<m;i++){
        scanf("%d",&arr[i]);
    }
    int idx=zero(arr,0,m-1);
    if(idx==-1){
        printf("0");
    }else{
        printf("%d",m-idx);
    }return 0;
}
